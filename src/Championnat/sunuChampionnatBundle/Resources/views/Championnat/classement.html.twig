

{% extends "::layout/layout.html.twig" %}        

{% block body %}
    <div class="container">
        <div class="row">
            <h2 style='text-align: center'> Le championnat de Ligue 1 Sénégalaise</h2>
            <div class="span2">

                <img src="{{ absolute_url(asset('img/lique_senegal.jpeg')) }}">   

            </div>
                 <div class="span2">
                  
            </div>
                
            <div class="span3">
                 {% if classements == null %}
                    <p>
                        <H3 class = "text-info"> Pas de classement pour l'instant !!!</H3>
                        </ p>
                    {% endif %}
                
                    <table class="table table-striped table-hover center-block">
                        <thead>
                            <tr>
                                <th>Rang</th>
                                <th>Nom Equipe</th>
                           
                                <th>Pts</th>
                          
                                {#<th><span class="icon-eye-open"></span></th>#}
                              
                            </tr>
                        </thead>
                        <tbody>
                            {% set ranger = 1 %} 
                            {% for classement in classements %}
                                <tr> 
                                    <td> {{ ranger }} </td>
                                    <td> {{ classement.nomEquipe }} </td>
                                    
                                    <td> {{ classement.points }} </td>
                                </tr>
                                {% set ranger = ranger + 1 %} 
                            {%endfor%}
                  
                        
                    </tbody>
                </table>
                    <P class="icon-star">  <a style="text-decoration: none; color: black;" href="{{ path('sunu_championnat_prog_match') }}">Programmer un match</a></P>
                    <P class="icon-star">  <a style="text-decoration: none; color: black;" href="{{ path('sunu_championnat_add_equipe') }}">Ajouter une équipe</a></P>
            </div>
            
            <div class="span2">

            </div>

            <div class="span2">

                {{ include('includeType/espace_admin.html.twig') }}

            </div>

        </div>
    </div>
{% endblock %}



