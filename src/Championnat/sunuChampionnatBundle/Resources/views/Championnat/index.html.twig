{% extends "::layout/layout.html.twig" %}        

{% block body %}
    <div class="container">
        <div class="row">
            <h2 style='text-align: center'> Programme des matchs</h2>
            <div class="span2">
                <img src="{{ absolute_url(asset('img/lique_senegal.jpeg')) }}">   
            </div> 
            <div class="span1">
                  
            </div>
            <div class="span6">
                 {% if rencontres == null %}
                    <p>
                        <H3 class = "text-info"> Pas de rencontre programmée pour l'instant !!!</H3>
                        </ p>
                    {% endif %}
                
                <P class="icon-star">  <a style="text-decoration: none; color: black;" href="{{ path('sunu_championnat_prog_match') }}">Programmer un match</a></P>
                    <table class="table table-striped table-hover center-block">
                        <thead>
                            <tr>
                                <th>Nom Equipe VS Nom Equipe</th>
                                <th>Date Match</th>
                                <th>Heure de début</th>
                                <th>Heure de Fin</th>
                                <th><span class="icon-eye-open"></span></th>
                              
                            </tr>
                        </thead>
                        <tbody>

                            {% for rencontre in rencontres %}
                                <tr> 
                                    <td> <strong>{{ rencontre.equipes[0].nomEquipe }} vs {{ rencontre.equipes[1].nomEquipe }} </strong> </td>
                                    <td> {{ rencontre.dateMatch|date('d/m/Y')}} </td>
                                    <td> {{ rencontre.heureDebut|date('h:m') }} </td>
                                    <td> {{ rencontre.heureFin|date('h:m')  }} </td> 
                                    <td> <a style="text-decoration: none; color: black;" href="{{ path('sunu_championnat_une_rencontre', { 'id' : rencontre.id }) }}"><span class="icon-flag"></span></a>    
                                    </td>
                                    

                                </tr>
                            {%endfor%}
                    </tbody>
                </table>
            </div>
            
            <div class="span1">

            </div>

            <div class="span2">

                {{ include('includeType/espace_admin.html.twig') }}

            </div>

        </div>
    </div>
{% endblock %}



