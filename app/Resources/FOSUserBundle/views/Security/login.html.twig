{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="row">
        <div class="span12">

            <div id="collapseOne" class="accordion-body collapse in">
                <div class="accordion-inner">
                    <div class="span3">

                        <img src="{{ absolute_url(asset('img/lique_senegal.jpeg')) }}">   

                    </div>

                    <div class="span6 offset2">
                        <h2>Connexion</h2>
                       
                       
                        <form action="{{ path("fos_user_security_check") }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <div class="form-group row">

                            </div>
                            <div class="form-group row">
                                <label for="username" class="col-sm-3 col-form-label">{{ 'security.login.username'|trans }}</label>
                                <div class="col-sm-6">
                                    <input type="text" name="_username" value="{{ last_username }}" class="form-control" id="username" placeholder="username" required="required">
                                </div>
                            </div>
                             <div class="form-group row">
                                <label for="password" class="col-sm-3 col-form-label">{{ 'security.login.password'|trans }}</label>
                                <div class="col-sm-6">
                                    <input type="password" name="_password" required="required" class="form-control" id="password" placeholder="Password">
                                </div>
                            </div>
                                <input class="btn btn-primary" type="submit" value="{{ 'security.login.submit'|trans }}" />
                            <a href="{{ path('fos_user_resetting_request') }}">Mot de passe perdu ?</a>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}
